<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="rl_root" parent="match_match">
        <item name="android:focusableInTouchMode">true</item>
        <item name="android:paddingTop">@dimen/root_paddingTop</item>
        <item name="android:paddingLeft">@dimen/root_paddingLeft</item>
        <item name="android:paddingBottom">@dimen/root_paddingBottom</item>
        <item name="android:paddingRight">@dimen/root_paddingRight</item>
        <item name="android:descendantFocusability">beforeDescendants</item>
    </style>


    <style name="text_input_layout_style">
        <item name="android:theme">@style/black_style</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">8dp</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textColorHint">@color/black</item>

    </style>

    <style name="text_input_layout_style1" parent="text_input_layout_style">
        <item name="android:layout_marginTop">0dp</item>
        <item name="android:layout_marginBottom">8dp</item>

    </style>

    <style name="black_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:backgroundTint" tools:targetApi="lollipop">@color/colorAccent</item>
        <item name="android:colorControlActivated" tools:targetApi="lollipop">@color/colorAccent
        </item>
    </style>


    <style name="et_black_style" parent="match_wrap">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">16dp</item>
        <item name="android:singleLine">true</item>
        <item name="android:maxLines">1</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginTop">10dp</item>
        <item name="android:lineSpacingExtra">1.00dp</item>

        <item name="android:background">@drawable/rectangle_edittext_shape</item>

    </style>

    <style name="button_style" parent="match_wrap">
        <item name="android:background">@drawable/button_shape</item>
        <item name="android:layout_marginTop">32dp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:textAllCaps">true</item>
        <item name="android:elevation">4dp</item>
        <item name="android:lineSpacingExtra">1.00dp</item>
    </style>

    <style name="tv_style" parent="match_wrap">
        <item name="android:layout_marginTop">12dp</item>
        <item name="android:textColor">@color/colorPrimary</item>

    </style>

</resources>
