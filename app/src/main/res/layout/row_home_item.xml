<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingLeft="24dp"
        android:paddingRight="16dp"
        android:paddingTop="8dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_user_image"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:scaleType="centerCrop"
            android:src="@mipmap/profile" />


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="18dp"
            android:layout_toRightOf="@+id/iv_user_image"
            android:orientation="vertical">


            <simplifii.framework.widgets.CustomFontTextView
                android:id="@+id/tv_user_name"
                style="@style/tv_simple_style_without_font"
                android:text="Account Name"
                app:customFont="Roboto-Medium.ttf" />

            <simplifii.framework.widgets.CustomFontTextView
                android:id="@+id/iv_user_subTitle"
                style="@style/tv_simple_style_without_font"
                android:text="Account Phone Number"
                android:textColor="#4299cc"
                android:textSize="14sp" />


        </LinearLayout>


    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/color_LightGrey" />
</LinearLayout>